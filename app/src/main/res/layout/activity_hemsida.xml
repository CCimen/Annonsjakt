<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HemsidaActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/filter_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/filter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Category Images -->
    <LinearLayout
        android:id="@+id/categories_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@+id/search_view">

        <ImageView
            android:id="@+id/category_image1"
            android:layout_width="12dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:src="@drawable/category_image1" />

        <ImageView
            android:id="@+id/category_image2"
            android:layout_width="2dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:src="@drawable/category_image2" />

        <ImageView
            android:id="@+id/category_image3"
            android:layout_width="1dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:src="@drawable/category_image3" />

        <ImageView
            android:id="@+id/category_image4"
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/category_image4" />
    </LinearLayout>

    <!-- Recommended Products -->
    <LinearLayout
        android:id="@+id/recommended_products_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@+id/categories_layout">

        <ImageView
            android:id="@+id/product_image1"
            android:layout_width="26dp"
            android:layout_height="103dp"
            android:layout_weight="1"
            android:src="@drawable/product_image1" />

        <ImageView
            android:id="@+id/product_image2"
            android:layout_width="3dp"
            android:layout_height="108dp"
            android:layout_weight="1"
            android:src="@drawable/product_image2" />

        <ImageView
            android:id="@+id/product_image3"
            android:layout_width="2dp"
            android:layout_height="106dp"
            android:layout_weight="1"
            android:src="@drawable/product_image3" />

        <ImageView
            android:id="@+id/product_image4"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/product_image4" />
    </LinearLayout>

    <!-- Announcement -->

    <!-- Navigation Bar -->

    <TextView
        android:id="@+id/announcement_text"
        android:layout_width="390dp"
        android:layout_height="250dp"
        android:layout_marginTop="136dp"
        android:drawableLeft="@drawable/savetrees"
        android:drawablePadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommended_products_layout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_navigation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Hem"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/favorite_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/favorite_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Favorit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profile_button"
            app:layout_constraintStart_toEndOf="@+id/home_button"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/profile_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Profil"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/favorite_button"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="12dp"
        android:text="Du har räddat 4 träd genom att använda oss!"
        app:layout_constraintBottom_toTopOf="@+id/announcement_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommended_products_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>
